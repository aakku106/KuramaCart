@page "/letshop"
@inject NavigationManager NavigationManager

<head>
    <link rel="stylesheet" href="css/rotate.css">
</head>

<h3>Let's Shop!</h3>

<div class="row">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">Beauty Products</h3>
            </div>
            <div class="card-body d-flex flex-column">
                <img src="/images/beauty-category.jpg" class="img-fluid mb-3" alt="Beauty Products">
                <p>Discover a wide range of beauty products for your skincare and makeup needs</p>
                <a href="/beauty" class="btn btn-info mt-auto">Shop Beauty</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">Kitchen Products</h3>
            </div>
            <div class="card-body d-flex flex-column">
                <img src="/images/kitchen-category.jpg" class="img-fluid mb-3" alt="Kitchen Products">
                <p>Explore kitchen tools and appliances to make your cooking experience better</p>
                <a href="/kitchen" class="btn btn-success mt-auto">Shop Kitchen</a>
            </div>
        </div>
    </div>
</div>

<section class="shop-container">
    <div class="shop-wrapper @(showOptions ? "show-options" : "")">
        <button type="button" class="shop-button ripple" @onclick="ToggleOptions">
            SHOP
        </button>

        <button class="option-button option-kitchen ripple" @onclick="GoToKitchen">
            <div class="option-icon">
                <i class="fas fa-utensils"></i>
            </div>
            <div class="option-text">Kitchen</div>
        </button>

        <button class="option-button option-beauty ripple" @onclick="GoToBeauty">
            <div class="option-icon">
                <span>&#x1F484;</span>
            </div>
            <div class="option-text">Beauty</div>
        </button>

        <button class="option-button option-clothes ripple" @onclick="GoToClothes">
            <div class="option-icon">
                <span>&#x1F455;</span>
            </div>
            <div class="option-text">Clothes</div>
        </button>
    </div>
</section>

@code {
    private bool showOptions = false;

    private void ToggleOptions()
    {
        showOptions = !showOptions;
    }

    private void GoToKitchen()
    {
        NavigationManager.NavigateTo("/KitchenWares");
    }

    private void GoToBeauty()
    {
        NavigationManager.NavigateTo("/BeautyProducts");
    }

    private void GoToClothes()
    {
        NavigationManager.NavigateTo("/ClothsFashion");
    }
}