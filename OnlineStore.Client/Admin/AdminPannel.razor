@page "/admin"
@layout MainLayout

<h3>Admin Panel</h3>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    User Management
                </div>
                <div class="card-body">
                    <p>Manage users, roles and permissions.</p>
                    <button class="btn btn-primary">Manage Users</button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Product Management
                </div>
                <div class="card-body">
                    <p>Add, edit or remove products.</p>
                    <button class="btn btn-primary">Manage Products</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Order Management
                </div>
                <div class="card-body">
                    <p>View and process customer orders.</p>
                    <button class="btn btn-primary">Manage Orders</button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Analytics
                </div>
                <div class="card-body">
                    <p>View sales reports and analytics.</p>
                    <button class="btn btn-primary">View Analytics</button>
                </div>
            </div>
        </div>
    </div>
</div>

