@rendermode InteractiveServer

<head>
  <style>
    .customController {
      min-height: 4rem;
      border-radius: 0 0 15px 15px !important;
      margin-bottom: 1rem;
      backdrop-filter: blur(10px);
      background: linear-gradient(135deg,
          rgba(255, 255, 255, 0.2),
          rgba(255, 255, 255, 0.1));
      border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .navbar {
      background: linear-gradient(135deg,
          rgba(106, 17, 203, 0.9),
          rgba(37, 117, 252, 0.8));
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.18);
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    }

    .navbar-brand {
      max-width: 200px;
      overflow: hidden;
    }

    .navbar-brand h1 {
      font-size: clamp(1rem, 3vw, 1.5rem);
      font-weight: 700;
      color: white;
      margin: 0;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .form-control {
      background: rgba(255, 255, 255, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.18);
      backdrop-filter: blur(4px);
      color: white;
      border-radius: 10px;
    }

    .form-control::placeholder {
      color: rgba(255, 255, 255, 0.8);
    }

    .btn {
      background: rgba(255, 255, 255, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.18);
      backdrop-filter: blur(4px);
      color: white;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    .btn:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-2px);
    }
  </style>
</head>
<nav class="navbar navbar-expand-lg sticky-top customController mb-3 shadow-lg z-3">
  <div class="container-fluid">
    <a href="/Home" class="navbar-brand user-select-none">
      <h1 class="user-select-none">KuramaCart🦊</h1>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <form class="d-flex ms-auto" role="search">
        <input class="form-control me-2 shadow-lg" type="search" placeholder="Search Any Products 😁"
          aria-label="Search Products">
        <button class="btn shadow-lg" type="submit">
          <h3>Search</h3>
        </button>
      </form>
      <ul class="navbar-nav ms-3">
        <li class="nav-item">
          <a class="nav-link text-white" href="/cart">🛒 Cart</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>