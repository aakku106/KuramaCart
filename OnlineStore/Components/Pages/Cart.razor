@page "/Cart"
@inject OnlineStore.Data.CartData cartData
@using OnlineStore.Data

<style>
    * {
        text-align: center !important;
    }

    body {
        background-color: rgba(44, 42, 42, 0.734);
        color: aqua !important;
    }

    table {
        margin: auto;
    }

    tr,
    th,
    td {
        border: 2px double pink;
        border-radius: 10px;
        font-size: 3rem;
        font-family: cursive;
        margin: 3vw;
    }
</style>

<h1>Products Added to cart are shown here</h1>




@foreach (var BeautyProductsInCart in cartData.AddCart())
{
    <div class="col">
        <div class="card">
            <div class="card-img-container">
                <img src="@BeautyProductsInCart.ImagePath" class="card-img-top" alt="@BeautyProductsInCart.ProductName picture"
                    loading="lazy">
            </div>
            <div class="card-body">
                <h5 class="card-title">@BeautyProductsInCart.ProductName</h5>
                <div class="price">â‚¹@BeautyProductsInCart.Price</div>
                @* <button class="add-to-cart-btn" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"
                    @onclick="() => passToCart(BeautyProducts)">
                    Add to Cart ðŸ›’
                </button> *@
            </div>
        </div>
    </div>
}




<table>
    <tr>
        <th>Item Name</th>
        <th>Cost</th>
        <th>ItemInCart</th>
    </tr>

    @foreach (var i in cartData.Carts)
    {
        <tr>
            <td>@i.ItemName</td>
            <td>@i.ItemCost</td>
            <td>@i.ItemInCart</td>
        </tr>
    }
</table>
