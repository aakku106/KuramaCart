@page "/LestShop"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<head>
    <link rel="stylesheet" href="css/rotate.css">
    <style>
        .shop-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
            position: relative;
        }

        .shop-button {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(145deg, #ff9500, #ff5722);
            border: none;
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            box-shadow: 0 8px 32px rgba(255, 87, 34, 0.4);
            cursor: pointer;
            position: relative;
            z-index: 10;
            transition: all 0.5s ease-in-out;
        }

        .shop-button:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 48px rgba(255, 87, 34, 0.6);
        }

        .shop-options {
            position: absolute;
            visibility: hidden;
            opacity: 0;
            transition: all 0.5s ease-out;
        }

        .option-button {
            position: absolute;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: none;
            font-weight: bold;
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            transform: scale(0.1);
            transition: all 0.5s ease-out;
        }

        .show-options .option-button {
            transform: scale(1);
            animation: rotate-in 0.5s ease-out forwards;
        }

        .option-button:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 28px rgba(0, 0, 0, 0.3);
        }

        /* Kitchen option - green */
        .option-kitchen {
            background: linear-gradient(145deg, #48c78e, #00a076);
            color: white;
            top: -180px;
            left: 0px;
            transition-delay: 0.1s;
        }

        /* Beauty option - pink */
        .option-beauty {
            background: linear-gradient(145deg, #ff85a2, #f14668);
            color: white;
            top: -90px;
            left: -156px;
            transition-delay: 0.2s;
        }

        /* Clothes option - blue */
        .option-clothes {
            background: linear-gradient(145deg, #3e8ed0, #2160c4);
            color: white;
            top: -90px;
            left: 156px;
            transition-delay: 0.3s;
        }

        .show-options {
            visibility: visible;
            opacity: 1;
        }

        .option-icon {
            font-size: 1.5rem;
            margin-bottom: 5px;
        }

        .option-text {
            font-size: 0.8rem;
        }

        .ripple {
            position: relative;
            overflow: hidden;
        }

        .ripple:after {
            content: "";
            display: block;
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
            background-image: radial-gradient(circle, #fff 10%, transparent 10.01%);
            background-repeat: no-repeat;
            background-position: 50%;
            transform: scale(10, 10);
            opacity: 0;
            transition: transform .5s, opacity 1s;
        }

        .ripple:active:after {
            transform: scale(0, 0);
            opacity: .3;
            transition: 0s;
        }

        @keyframes
        rotate-in {
            from {
                transform: scale(0.1) rotate(-45deg);
            }

            to {
                transform: scale(1) rotate(0);
            }
        }
    </style>
</head>

<section class="shop-container">
    <button type="button" class="shop-button ripple" @onclick="ToggleOptionsWithSound">
        SHOP
    </button>

    <div class="shop-options @(showOptions ? "show-options" : "")">
        <button class="option-button option-kitchen ripple" @onclick="GoToKitchen">
            <div class="option-icon">
                <i class="fas fa-utensils"></i>
            </div>
            <div class="option-text">Kitchen</div>
        </button>

        <button class="option-button option-beauty ripple" @onclick="GoToBeauty">
            <div class="option-icon">
                <span>&#x1F484;</span>
            </div>
            <div class="option-text">Beauty</div>
        </button>

        <button class="option-button option-clothes ripple" @onclick="GoToClothes">
            <div class="option-icon">
                <span>&#x1F455;</span>
            </div>
            <div class="option-text">Clothes</div>
        </button>
    </div>
</section>

@code {
    private bool showOptions = false;

    private void ToggleOptions()
    {
        showOptions = !showOptions;
    }

    private void GoToKitchen()
    {
        NavigationManager.NavigateTo("/KitchenWares");
    }

    private void GoToBeauty()
    {
        NavigationManager.NavigateTo("/BeautyProducts");
    }

    private void GoToClothes()
    {
        NavigationManager.NavigateTo("/ClothsItems");
    }

    private async Task ToggleOptionsWithSound()
    {
        showOptions = !showOptions;
        await JSRuntime.InvokeVoidAsync("playSound",
        showOptions ? "open.mp3" : "close.mp3");
    }
}
