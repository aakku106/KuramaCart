@page "/Home"
@using OnlineStore.Models
@rendermode InteractiveServer
@inject User userDetails

<PageTitle> KuramaCart🦊 - Home</PageTitle>


<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-body">
        🎉 Login successful! Welcome, @userDetails.UserName 💕
        <div class="mt-2 pt-2 border-top">
            <button type="button" class="btn btn-danger btn-sm">Log-Out</button>
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="toast">Stay Logged In 🦊</button>
        </div>
    </div>
</div>