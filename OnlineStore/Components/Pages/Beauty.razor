@page "/BeautyProducts"
@inject OnlineStore.Data.ProductData beauty
@inject OnlineStore.Data.CartData cartData

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
    }

    .card {
        border-radius: 15px;
        background: linear-gradient(135deg,
                rgba(255, 255, 255, 0.2),
                rgba(255, 255, 255, 0.1));
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        margin-bottom: 1.5rem;
        padding: 20px;
        transition: all 0.3s ease;
        transform-origin: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.25);
    }

    .card-img-container {
        width: 100%;
        height: 280px;
        /* Increased height for better visibility */
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 15px;
        /* Increased padding */
        display: flex;
        /* Added flex display */
        align-items: center;
        /* Center vertically */
        justify-content: center;
        /* Center horizontally */
    }

    .card-img-top {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        /* Allow natural width */
        height: auto;
        /* Allow natural height */
        object-fit: contain;
        /* Maintain aspect ratio */
        position: relative;
        /* Remove absolute positioning */
        transform: none;
        /* Remove transform */
        transition: transform 0.3s ease;
    }

    .card-img-top:hover {
        transform: scale(1.05);
        /* Subtle zoom on hover */
    }

    .card-body {
        padding: 20px 15px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        margin-top: 15px;
        backdrop-filter: blur(4px);
    }

    .price {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2d3436;
        text-align: center;
        margin: 10px 0;
        background: linear-gradient(135deg,
                rgba(106, 17, 203, 0.2),
                rgba(37, 117, 252, 0.1));
        padding: 8px;
        border-radius: 8px;
        backdrop-filter: blur(4px);
    }

    .add-to-cart-btn {
        width: 100%;
        padding: 10px;
        background: linear-gradient(135deg,
                rgba(106, 17, 203, 0.9),
                rgba(37, 117, 252, 0.8));
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        cursor: pointer;
        /* Add pointer cursor */
    }

    .add-to-cart-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(37, 117, 252, 0.3);
    }

    .add-to-cart-btn:active {
        transform: translateY(1px);
        /* Slight push down effect */
        background: linear-gradient(135deg,
                rgba(86, 14, 163, 0.9),
                rgba(31, 98, 212, 0.8));
        /* Darker gradient */
        box-shadow: 0 2px 8px rgba(37, 117, 252, 0.2);
        /* Reduced shadow */
        transition: all 0.1s ease;
        /* Faster transition for click feedback */
    }

    /* Optional: Add focus state for accessibility */
    .add-to-cart-btn:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(37, 117, 252, 0.3);
    }

    .card-title {
        color: #2d3436;
        font-weight: 600;
        font-size: 1.1rem;
        text-align: center;
        margin: 0;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .page-header {
        padding: 20px 0;
        margin-bottom: 30px;
        text-align: center;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2d3436;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .product-count {
        color: #2d3436;
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .modal-content {
        background: linear-gradient(135deg,
                rgba(255, 255, 255, 0.7),
                rgba(255, 255, 255, 0.5));
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    }

    .modal-header {
        border-bottom: 1px solid rgba(255, 255, 255, 0.18);
        padding: 1.5rem;
    }

    .modal-footer {
        border-top: 1px solid rgba(255, 255, 255, 0.18);
        padding: 1.5rem;
    }

    .modal-title {
        color: #2d3436;
        font-weight: 600;
    }

    .btn-close {
        background-color: rgba(45, 52, 54, 0.1);
        border-radius: 50%;
        padding: 0.5rem;
    }

    .modal-footer .btn {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .modal-footer .btn-secondary {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        color: #2d3436;
    }

    .modal-footer .btn-primary {
        background: linear-gradient(135deg,
                rgba(106, 17, 203, 0.9),
                rgba(37, 117, 252, 0.8));
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        color: white;
    }

    .modal-footer .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(37, 117, 252, 0.3);
    }

    .modal-footer .btn:active {
        transform: translateY(1px);
        box-shadow: 0 2px 8px rgba(37, 117, 252, 0.2);
    }
</style>

