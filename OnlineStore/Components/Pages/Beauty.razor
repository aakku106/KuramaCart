<div class="container">
    <div class="page-header">
        <h1 class="page-title">Beauty Products ðŸ’„</h1>
        <div class="product-count">
            Showing @beauty.GetBeauties()?.Count() Products
        </div>
    </div>

    @if (beauty.GetBeauties() == null)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var BeautyProducts in beauty.GetBeauties())
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-img-container">
                                <img src="@BeautyProducts.ImagePath" class="card-img-top"
                                    alt="@BeautyProducts.ProductName picture" loading="lazy">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@BeautyProducts.ProductName</h5>
                                <div class="price">â‚¹@BeautyProducts.Price</div>
                                <button class="add-to-cart-btn" type="button" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal" @onclick="() => passToCart(BeautyProducts)">
                                    Add to Cart ðŸ›’
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add to Cart ðŸ›’</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="text-center mb-0" style="color: #2d3436; font-size: 1.1rem;">
                    Are you sure you want to add to your cart? ðŸ¤”
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" @onclick="AddToCart">
                    Yes, Add to Cart! ðŸ¦Š
                </button>
            </div>
        </div>
    </div>
</div>
@code {
    private bool conformCart = false;
    private void AddToCart()
    {
        conformCart = true;
    }
    private void passToCart(Models.Product e)
    {
        if (conformCart)
        {
            cartData.AddCart().Add(e);
        }

    }

}