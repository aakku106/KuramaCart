@page "/MasterAdminPanel"
@using OnlineStore.Components.Layout
@layout EmptyLayout
<style>
    :root {
        --mainBG: rgb(56, 56, 82);
        --HighText: rgb(250, 250, 250);
        --asideBG: rgb(46, 46, 70);
        --asideText: rgb(186, 186, 188);
        --bodyText: rgb(218, 218, 220);
        --buttonHover: rgb(75, 90, 224);
    }

    * {
        border-radius: 1vw;
        padding: 0;
        margin: 0;
    }

    body {
        background-color: var(--mainBG);
        color: var(--maunText);
        height: 100vh;
    }

    main {
        display: flex;
        flex-direction: row;
        gap: 5rem;
        height: 100vh;
    }

    aside {
        display: flex;
        flex-direction: column;
        justify-content: space-between !important;
        background-color: var(--asideBG);
        color: var(--asideText);
        padding: 1rem;
        position: sticky;
        width: 17rem !important;
        height: 100vh;
        top: 0;

        h3 {
            padding: 1vw;
            cursor: pointer;
            transition: all .3s ease-in-out !important;

            &:hover {
                background-color: var(--buttonHover);
                box-shadow: 0px 0px 10px 1px rgb(10, 29, 54);
                text-align: center;
            }
        }
    }

    .mainSection {
        width: 100%;
        background-color: var(--mainBG);
        color: var(--bodyText);

    }
</style>
<main>
    <aside>
        <section>
            <h3>Dashboard</h3>
            <h3>Statistics</h3>
            <h3>Payments</h3>
            <h3>Transitions</h3>
            <h3>Products</h3>
            <h3>Customer</h3>
            <h3>Message</h3>
        </section>
        <section>
            <h3>Setting</h3>
            <h3>LogOut</h3>
        </section>
    </aside>

    <section class="mainSection">
        <span></span><span></span><span></span><span></span><span></span><span></span>
    </section>
</main>
